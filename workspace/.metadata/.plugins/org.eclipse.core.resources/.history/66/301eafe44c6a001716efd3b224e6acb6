<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Quiz # 1</title>
<script src="js/jquery-3.2.1.min.js"></script>
<script>
	$(document).ready(function() {
		console.log("document has loaded");
		
		var questionArray = [
			"What was the 1st version of the Internet called? (Also, known as the father of the internet)"	,
			"Name one of the older programming languages"
		];
		

		// Make the 1st div visible
		$("button").click(function() {
			console.log("Start clicked...");
			
			$("#question").text(questionArray[0]);
		});

		$("a#send-answer").click(function() {
			console.log("Inside send-answer function...");
			var question = $("#question").text();
			
			var answer = $("textarea#answer").val();
			alert(question+"; "+answer);
		});

	});
</script>

</head>
<body>
	<h1>Welcome to Learning Sessions Quiz # 1</h1>

	<button>Start</button>
	
	<div id="questions">
	<p id="question"></p>
	<textarea id="answer" rows="4" cols="50"></textarea><br/>
	<a id="send-answer" href="#">Next</a>
	</div>

</body>
</html>