<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Quiz # 1</title>
<script src="js/jquery-3.2.1.min.js"></script>
<script>
	$(document).ready(function() {
		console.log("document has loaded");
		$("div#questions").hide();
		
		var questionArray = [
			"What was the 1st version of the Internet called? (Also, known as the father of the internet)",
			"Name one of the older programming languages"
		];
		

		// Make the 1st div visible
		$("button").click(function() {
			console.log("Start clicked...");
			$("div#questions").toggle();
			$("#question_number").text("0");
			$("#question_text").text(questionArray[0]);
		});

		$("a#send-answer").click(function() {
			
			var question_number = $("#question_number").text();
			console.log("Inside send-answer function for question # "+question_number+"...");
			var question_text = $("#question_text").text();
			var answer = $("textarea#answer").val();
			alert(question_number+"; "+question_text+"; "+answer);
			
			//TODO: Save this answer to a file
			
			// Load the next question
			
		});

	});
</script>

</head>
<body>
	<h1>Welcome to Learning Tech Quiz # 1</h1>

	<button>Start</button>
	
	<div id="questions" style="visibility:block">
	
		<input type="hidden" id="question_number" value=""/>
		<p id="question_text"></p>
		<textarea id="answer" rows="4" cols="50"></textarea><br/>
		<a id="send-answer" href="#">Next</a>
	
	</div>

</body>
</html>